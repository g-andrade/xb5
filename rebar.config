% -*- mode: erlang; -*- vim: set ft=erlang:

%% == Erlang Compiler == %%

{minimum_otp_vsn, "22"}.

{erl_opts, [
    debug_info,
    warn_export_vars,
    % warn_missing_spec,
    warn_unused_import,
    % warnings_as_errors,
    {platform_define, "^22\\.", 'NO_CT_SUITE_BEHAVIOUR'},
    {platform_define, "^23\\.[0-1]", 'NO_CT_SUITE_BEHAVIOUR'}
]}.

%% == Dependencies and plugins ==

{deps, []}.

{project_plugins, [
    {erlfmt, "1.7.0"},
    {rebar3_ex_doc, "0.2.30"},
    {rebar3_hank, "1.4.1"},
    {rebar3_hex, "7.0.11"},
    {rebar3_lint, "4.1.1"}
]}.

%% == Formatter ==

{erlfmt, [write]}.

%% == Dialyzer ==

{dialyzer, [
    {warnings, [
        error_handling,
        underspecs,
        unknown,
        unmatched_returns
    ]},
    {plt_extra_apps, [
        common_test
    ]}
]}.

%% == Xref ==

{xref_checks, [
    deprecated_function_calls,
    exports_not_used,
    locals_not_used,
    undefined_function_calls
]}.

%% == Profiles ==

{profiles, [
    {shell, [
        {deps, [
            {recon, "~> 2.5"}
        ]}
    ]},

    {test, [
        {erl_opts, [
            debug_info,
            nowarn_export_all,
            nowarn_missing_spec,
            nowarnings_as_errors
        ]},
        {shell, [
            {apps, [b5_trees]},
            {config, "test/config/sys.config"}
        ]},
        {cover_enabled, true},
        {cover_opts, [verbose]}
    ]},
    {extra, [
        {erl_opts, [
            nowarn_missing_spec,
            nowarnings_as_errors,
            {src_dirs, ["src", "support"]}
        ]},
        {deps, [
            {taskforce, "1.2.3"}
        ]}
    ]}
]}.

{ex_doc, [
    {source_url, <<"https://github.com/g-andrade/b5_trees">>},
    {extras, [<<"README.md">>, <<"CHANGELOG.md">>, <<"LICENSE.txt">>]},
    {main, <<"readme">>},
    {proglang, erlang}
]}.
{hex, [
    {doc, #{
        provider => ex_doc
    }}
]}.
